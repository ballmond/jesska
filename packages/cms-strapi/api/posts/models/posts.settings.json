{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "posts",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "excerpt": {
      "type": "text"
    },
    "posted_at": {
      "type": "date"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "main_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "body": {
      "type": "richtext"
    },
    "categories": {
      "collection": "category"
    }
  }
}
